<h2>Comentarios</h2>
<!-- text field to add a comment -->
<form action="/" class="mb-4 row g-2">
  <label for="dscomment" class="col-form-label">Agrega un comentario</label>
  <div class="col-lg">
    <input type="text" class="form-control rounded-element" id="dscomment" />
  </div>
  <div class="col-auto">
    <button type="submit" class="btn btn-dark rounded-element">Comentar</button>
  </div>
</form>

<!-- all comments -->
