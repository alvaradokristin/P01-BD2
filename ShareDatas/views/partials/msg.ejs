<!-- massage from another user to the current one -->
<div class="container-lg mt-1">
  <div class="row">
    <div class="col">
      <div class="user">
        <img src="https://i.pravatar.cc/50" alt="user avatar" />
        <a href=""><span><%= msgData.sender_id %></span></a>
      </div>
    </div>
    <div class="col-10">
      <span class="text-muted"><%= msgData.created_at %></span>
    </div>
  </div>
  <div class="flex-start">
    <p class="ms-4 my-1 text-msg-bg rounded-4 p-2">
      <%= msgData.message_text %>
    </p>
  </div>
</div>
