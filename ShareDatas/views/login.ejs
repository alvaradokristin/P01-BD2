<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('./partials/head'); %>
  </head>
  <body>
    <main class="d-flex justify-content-center align-items-center mt-5">
      <div class="w-25">
        <h1>Login</h1>
        <form method="post" action="/login">
          <input
            type="text"
            name="username"
            class="form-control rounded-element"
            placeholder="Username"
            required
          /><br />
          <input
            type="password"
            name="password"
            class="form-control rounded-element"
            placeholder="Password"
            required
          /><br />
          <div class="d-flex justify-content-center align-items-center my-3">
            <button class="btn btn-dark rounded-element w-100" type="submit">
              Login
            </button>
          </div>
        </form>
        <div class="d-flex justify-content-center align-items-center my-3">
          <button
            class="btn btn-light rounded-element"
            onclick="location.href='/register'"
          >
            Register
          </button>
        </div>
      </div>
    </main>
  </body>
</html>
