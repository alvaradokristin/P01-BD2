<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('./partials/head'); %>
  </head>
  <body>
    <main class="d-flex justify-content-center align-items-center mt-5">
      <div class="w-25">
        <h1>Register</h1>
        <form method="post" action="/register">
          <input
            type="text"
            name="username"
            class="form-control rounded-element"
            placeholder="Username"
            required
          /><br />
          <input
            type="password"
            name="password"
            class="form-control rounded-element"
            placeholder="Password"
            required
          /><br />
          <input
            type="text"
            name="firstName"
            class="form-control rounded-element"
            placeholder="First Name"
            required
          /><br />
          <input
            type="text"
            name="lastName"
            class="form-control rounded-element"
            placeholder="Last Name"
            required
          /><br />
          <input
            type="date"
            name="dateOfBirth"
            class="form-control rounded-element"
            placeholder="Date of Birth"
            required
            max="<%= new Date().toISOString().split('T')[0] %>"
          /><br />
          <div class="d-flex justify-content-center align-items-center my-3">
            <button class="btn btn-dark rounded-element w-100" type="submit">
              Register
            </button>
          </div>
        </form>
        <div class="d-flex justify-content-center align-items-center my-3">
          <button
            class="btn btn-light rounded-element"
            onclick="location.href='/login'"
          >
            Login
          </button>
        </div>
      </div>
    </main>
  </body>
</html>
